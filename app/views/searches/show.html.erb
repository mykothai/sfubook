<h1>Search Results</h1>



<%= form_for @search, html: {class: "pure-form"} do |s| %>

  <div class="field">
    <pre><%= s.label :Year %>            <%= s.text_field :year %></pre>
  </div>

  <div class="field">
   <pre><%= s.label :Semester %>        <%= s.text_field :semester %></pre>
  </div>

  <div class="field">
    <pre><%= s.label :Department %>      <%= s.text_field :subject %></pre>
  </div>

  <div class="field">
    <pre><%= s.label :Course_Number %>   <%= s.text_field :number %></pre>
  </div>

  <div class="actions">
    <%= s.submit "Search", class: "btn btn-success my-2 my-sm-0" %>
  </div>

<% end %>
<br>

<p><%= link_to 'Back to Courses page', courses_path %><br>

<%= link_to 'Search Again', new_search_path %></p>

<% if @search.search_courses.empty? %>
  <p>No Course Found</p>

<% else %>
<!--  <%# @search.search_courses.each do |c| %><br>-->
    <div class="div">
      <table>
        <tr>
          <th>Subject</th>
          <th>Course Number</th>
          <th>Credits</th>
          <th>Year</th>
          <th>Semester</th>
          <th>Prerequisites</th>
          <th>Corequisites</th>
          <th></th>
        </tr>

        <% @search.search_courses.each do |c| %>
          <tr>
            <td><%= c.subject %></td>
            <td><%= c.number %></td>
            <td><%= c.credits %></td>
            <td><%= c.year %></td>
            <td><%= c.semester %></td>
            <td><%= c.prerequisites %></td>
            <td><%= c.corequisites %></td>
            <td><%= link_to 'Details', course_path %></td>
          </tr>
        <% end %>
      </table>
    </div>

<% end %>