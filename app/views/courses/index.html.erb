<%= form_tag courses_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], placeholder: "Course # or subject" %>
  <%= submit_tag "Search" %>
<% end %>

<!--list of attributes to show-->
<table>
  <tr>
    <th>Subject</th>
    <th>Course Number</th>
    <th>Credits</th>
    <th>Prerequisites</th>
    <th>Corequisites</th>
    <th></th>
  </tr>

  <% @courses.each do |course| %>
    <tr>
      <td><%= course.subject %></td>
      <td><%= course.number %></td>
      <td><%= course.credits %></td>
      <td><%= course.prerequisites %></td>
      <td><%= course.corequisites %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
    </tr>
  <% end %>
</table>